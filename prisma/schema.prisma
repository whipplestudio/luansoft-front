// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  role          UserRole
  status        UserStatus
  lastLogin     DateTime?
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  contador      Contador?
  cliente       Cliente?
  notifications Notification[]
}

enum UserRole {
  ADMIN
  CONTADOR
  CLIENTE
  DASHBOARD
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

model Contador {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique
  clients   Cliente[]
  processes Process[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cliente {
  id                String             @id @default(uuid())
  user              User               @relation(fields: [userId], references: [id])
  userId            String             @unique
  company           String
  razonSocial       String
  type              ClientType         @relation(fields: [clientTypeId], references: [id])
  clientTypeId      String
  assignedContador  Contador?          @relation(fields: [assignedContadorId], references: [id])
  assignedContadorId String?
  status            ClientStatus
  processes         Process[]
  fiscalDeliverables FiscalDeliverable[]
  documents         Document[]
  historyEntries    HistoryEntry[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
}

model ClientType {
  id          String    @id @default(uuid())
  name        String
  description String
  clients     Cliente[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum ClientStatus {
  ACTIVE
  INACTIVE
}

model Process {
  id                 String            @id @default(uuid())
  name               String
  status             ProcessStatus
  progress           Int
  cliente            Cliente           @relation(fields: [clienteId], references: [id])
  clienteId          String
  contador           Contador          @relation(fields: [contadorId], references: [id])
  contadorId         String
  fiscalDeliverable  FiscalDeliverable @relation(fields: [fiscalDeliverableId], references: [id])
  fiscalDeliverableId String
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}

enum ProcessStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

model FiscalDeliverable {
  id                 String    @id @default(uuid())
  client             Cliente   @relation(fields: [clientId], references: [id])
  clientId           String
  deliverableType    String
  period             DeliverablePeriod
  dueDate            DateTime
  responsible        String
  observations       String?
  processes          Process[]
  progressPercentage Int
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}

enum DeliverablePeriod {
  MONTHLY
  QUARTERLY
  ANNUAL
}

model Notification {
  id          String   @id @default(uuid())
  title       String
  description String
  date        DateTime
  read        Boolean  @default(false)
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Document {
  id         String   @id @default(uuid())
  name       String
  uploadDate DateTime
  type       String
  client     Cliente  @relation(fields: [clientId], references: [id])
  clientId   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model HistoryEntry {
  id               String             @id @default(uuid())
  date             DateTime
  responsibleName  String
  client           Cliente            @relation(fields: [clientId], references: [id])
  clientId         String
  processStatuses  ProcessStatusEntry[]
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
}

model ProcessStatusEntry {
  id             String       @id @default(uuid())
  name           String
  status         ProcessStatus
  historyEntry   HistoryEntry @relation(fields: [historyEntryId], references: [id])
  historyEntryId String
}

